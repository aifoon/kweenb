{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "sourceMap": false,
    "outDir": "../../dist",
    "baseUrl": "../../src",
    "strictPropertyInitialization": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "@main/*": ["main/*"],
      "@shared/*": ["shared/*"]
    },
    "types": ["node", "vite/client"]
  },
  "include": [ "src/**/*.ts" ],
  "exclude": ["dist/**/*.*"],
}
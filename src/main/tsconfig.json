{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ES2018",
    "module": "CommonJS",
    "sourceMap": false,
    "outDir": "../../dist",
    "baseUrl": "../../src",
    "strictPropertyInitialization": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "@main/*": ["main/*"],
      "@shared/*": ["shared/*"]
    },
  },
  "include": ["../main/**/*", "../shared/**/*"],
  "exclude": ["../renderer/**/*"]
}
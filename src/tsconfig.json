{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["es6", "dom"],
    "moduleResolution": "node",
    "module": "ESNext",
    "target": "ESNext",
    "importHelpers": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strict": true,
    "noUnusedLocals": false,
    "pretty": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "declaration": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "../dist", // added this to ignore errors
    "paths": {
      "@components/*": ["components/*"],
      "@renderer/*": ["renderer/*"],
      "@shared/*": ["shared/*"],
      "@seeds/*": ["seeds/*"]
    }
  },
  "exclude": [
    "node_modules",
    "scripts/*.js",
    "interface/vite.config.js"
  ]
}
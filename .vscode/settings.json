{
"search.useIgnoreFiles": false,
  "search.exclude": {
      "**/.next": true,
      "**/build": true,
      "**/node_modules": true,
      "**/out": true,
      "**/script.js": true,
      "**/*-cache": true,
      "**/dist": true,
      "yarn.lock": true,
      "**/*.mdx": true
  },
  "eslint.options": {
    "overrideConfigFile": "./.config/.eslintrc.json"
  },
  "prettier.configPath": "./.config/.prettierrc.json",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "[javascript]": {
    "editor.formatOnSave": true
  },
  "[javascriptreact]": {
    "editor.formatOnSave": false
  },
  "[typescript]": {
    "editor.formatOnSave": false
  },
  "[typescriptreact]": {
    "editor.formatOnSave": false
  },
  "[json]": {
    "editor.formatOnSave": true
  },
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "eslint.alwaysShowStatus": true,
  "files.eol": "\n",
  "typescript.tsdk": "node_modules/typescript/lib",
}